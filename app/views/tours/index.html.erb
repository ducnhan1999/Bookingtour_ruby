<div id="tour_list">
    <h1>Tours</h1>
  
    <table>
    <% @tours.each do |tour| %>
        <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
  
            <td>
                <%= image_tag(tour.image_url, :class => 'list_image') %>
            </td>
  
            <td class="list_description">
                <dl>
                    <dt><%= tour.title %></dt>
                    <dd><%= truncate(strip_tags(tour.description),
                            :length => 80) %></dd>
                </dl>
            </td>
  
            <td class="list_actions">
                <%= link_to 'Show', tour %><br/>
                <%= link_to 'Edit', edit_tour_path(tour) %><br/>
                <%= link_to 'Destroy', tour, 
                    data: { confirm: 'Are you sure?' },
                    :method => :delete %>
            </td>
        </tr>
    <% end %>
    </table>
</div>
 
